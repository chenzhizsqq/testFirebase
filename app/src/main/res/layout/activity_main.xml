<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/authentication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:background="@drawable/back"
            android:text="Authentication:简单的用户注册登录" />
        <TextView
            android:id="@+id/authenticationMailCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:background="@drawable/back"
            android:text="Authentication:邮件验证的用户注册登录（暂时还没有成功）" />
        <TextView
            android:id="@+id/write_and_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:background="@drawable/back"
            android:text="Realtime Database 简单的读、写、删除:常用在存储json数据" />
        <TextView
            android:id="@+id/FirestoreCrudActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:background="@drawable/back"
            android:text="Firestore 简单的读、写、删除:相当于SQL处理的数据" />
        <TextView
            android:id="@+id/CloudMessagingActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:background="@drawable/back"
            android:text="Cloud Messaging：系统通知功能" />



    </LinearLayout>

</androidx.core.widget.NestedScrollView>